{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Run with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/main.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": [
                "--model", "MLO",
                "--lr", "0.001",
                "--patience", "8",
                "--dist_flag", "l2",
                "--margin", "5.0",
                "--loss", "TCL",
                "--threshold", "0.3",
                "--skip", "100",
                "--load_slices"
            ],
            "justMyCode": true
        }
    ]
}
